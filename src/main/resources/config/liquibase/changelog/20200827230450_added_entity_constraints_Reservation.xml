<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Reservation.
    -->
    <changeSet id="20200827230450-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="screening_id"
                                 baseTableName="reservation"
                                 constraintName="fk_reservation_screening_id"
                                 referencedColumnNames="id"
                                 referencedTableName="screening"/>

        <addForeignKeyConstraint baseColumnNames="seat_id"
                                 baseTableName="reservation"
                                 constraintName="fk_reservation_seat_id"
                                 referencedColumnNames="id"
                                 referencedTableName="seat"/>

        <addForeignKeyConstraint baseColumnNames="booking_id"
                                 baseTableName="reservation"
                                 constraintName="fk_reservation_booking_id"
                                 referencedColumnNames="id"
                                 referencedTableName="booking"/>

    </changeSet>
</databaseChangeLog>
